@inject PortfolioWebsite.Client.Services.AppState AppState
@inject PortfolioWebsite.Client.Services.ProjectService ProjectService
@using Shared.Models;

@page "/"
<PageTitle>About</PageTitle>

<PortfolioWebsite.Client.Components.DynamicProfile></PortfolioWebsite.Client.Components.DynamicProfile>
<MudPaper Elevation="1">
	<MudPaper>
		<MudText Typo="Typo.h5">
			About Me
		</MudText>
	</MudPaper>
	<MudText Typo="Typo.body1">
		Hello, my name is Zachary Morello, I am a full-stack software developer. I specialize in backend development and high quality, tactile user experiences. There isn't much I can say here that isn't better represented by my work, so please check out the <MudLink Href="/projects">Projects</MudLink> page to see what I've been working on.
	</MudText>
</MudPaper>

@code{
	protected override void OnAfterRender(bool firstRender)
	{
		base.OnAfterRender(firstRender);
		AppState.SetCurrentPage(Services.CurrentPage.AboutMe);
	}

	protected override async void OnInitialized()
	{
		base.OnInitialized();
	}

}